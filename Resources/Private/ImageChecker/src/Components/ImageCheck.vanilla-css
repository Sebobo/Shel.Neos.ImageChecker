.image-check {
    --success-color: #00a338;
    --error-color: #ff460d;
    --warn-color: #ff8700;
    --border-color: #666;

    position: relative;
    margin-top: 1rem;
}

.image-check__results {
    padding: 1rem 0;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
}

.image-check__results table {
    margin-top: .5rem;
    width: 100%;
}

.image-check > button {
    position: absolute;
    top: -48px;
    right: 0;
}
